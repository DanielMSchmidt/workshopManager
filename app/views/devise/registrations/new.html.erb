<h2>Registrieren</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s6">
      <%= f.text_field :name, required: true, class: "validate" %>
      <%= f.label :name, data: {error: "Bitte geben sie einen Namen an"}, class: 'active' %>
    </div>

    <div class="input-field col s6">
      <%= f.email_field :email, required: true, class: "validate" %>
      <%= f.label :email, data: {error: "Die E-Mailadresse ist fehlerhaft"}, class: 'active' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.password_field :password, autocomplete: "off", minlength: 6, required: true, class: "validate" %>
      <%= f.label :password, "Passwort", {class: 'active', data: {error: "Mindestens #{@minimum_password_length} Buchstaben eingeben"}} %>
    </div>

    <div class="input-field col s6">
      <%= f.password_field :password_confirmation, autocomplete: "off", minlength: 6, required: true, class: "validate" %>
      <%= f.label :password_confirmation, "Passwort wiederholen", {class: 'active', data: {error: 'Mindestens 6 Buchstaben eingeben'}} %>
    </div>
  </div>
  <div class="row">
    <div class="actions s12">
      <button class="btn waves-effect waves-light" type="submit" name="action">Registrieren</button>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

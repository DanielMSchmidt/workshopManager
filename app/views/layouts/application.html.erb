<!DOCTYPE html>
<html>
  <head>
    <title>WorkshopManager</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <base href="/">
  </head>
  <body ng-app="workshopManager">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_path %>">Workshop Manager</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to 'Deine Seite', public_user_path(current_user.id), target: '_blank' %></li>
              <li><%= link_to 'Nachrichten', message_index_path %></li>
              <li><%= link_to 'Workshops', events_path %></li>
              <li><%= link_to 'Abmelden', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <% unless @hide_login %>
                <li><%= link_to 'Anmelden', new_user_session_path %></li>
                <li><%= link_to 'Registrieren', new_user_registration_path %></li>
              <% end %>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>

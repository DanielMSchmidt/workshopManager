<h1>Listing events</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Datum</th>
      <th>Zeitraum</th>
      <th colspan="3">Aktionen</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= truncate(event.description) %></td>
        <td><%= event.start %></td>
        <td><%= event.duration %></td>
        <td><%= link_to '', event, :class => "fa fa-search-plus" %></td>
        <td><%= link_to '', edit_event_path(event), :class => "fa fa-gear" %></td>
        <td><%= link_to '', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
